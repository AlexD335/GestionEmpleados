@model GestionEmpleados.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-trash-alt me-2 text-danger"></i>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Volver al Listado
    </a>
</div>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h6 class="alert-heading">
                <i class="fas fa-warning me-2"></i>¡Atención! Esta acción no se puede deshacer.
            </h6>
            <p class="mb-0">
                Estás a punto de marcar como <strong>INACTIVO</strong> al siguiente empleado.
                Esta operación utiliza "soft delete" - el registro se mantiene en la base de datos
                pero no aparecerá en los listados activos.
            </p>
        </div>

        <h5 class="text-center text-danger mb-4">
            <i class="fas fa-user me-2"></i>¿Estás seguro de que quieres eliminar a este empleado?
        </h5>

        <!-- Información del Empleado a Eliminar -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="fas fa-user me-2"></i>Información del Empleado
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="fw-bold">Nombre Completo</label>
                            <p class="form-control-plaintext border-bottom pb-2">@Model.Nombre</p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Documento</label>
                            <p class="form-control-plaintext border-bottom pb-2">@Model.Documento</p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Cargo</label>
                            <p class="form-control-plaintext border-bottom pb-2">
                                @if (!string.IsNullOrEmpty(Model.Cargo))
                                {
                                    @Model.Cargo
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="fw-bold">Email</label>
                            <p class="form-control-plaintext border-bottom pb-2">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    @Model.Email
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Teléfono</label>
                            <p class="form-control-plaintext border-bottom pb-2">
                                @if (!string.IsNullOrEmpty(Model.Telefono))
                                {
                                    @Model.Telefono
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Estado Actual</label>
                            <p class="form-control-plaintext">
                                @if (Model.Activo)
                                {
                                    <span class="badge bg-success">ACTIVO</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">INACTIVO</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Fecha de Ingreso</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @Model.FechaIngreso.ToString("dd/MM/yyyy")
                    </p>
                </div>

                @if (!string.IsNullOrEmpty(Model.Direccion))
                {
                    <div class="mb-3">
                        <label class="fw-bold">Dirección</label>
                        <p class="form-control-plaintext">@Model.Direccion</p>
                    </div>
                }
            </div>
        </div>

        <!-- Consecuencias de la Eliminación -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>¿Qué sucederá?
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        El empleado será marcado como <strong>INACTIVO</strong>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        No aparecerá en los listados principales
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Los datos se mantendrán en la base de datos
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Podrá ser reactivado posteriormente si es necesario
                    </li>
                </ul>
            </div>
        </div>

        <!-- Formulario de Eliminación -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between align-items-center border-top pt-3">
                <div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                        <label class="form-check-label text-danger fw-bold" for="confirmDelete">
                            Confirmo que deseo eliminar este empleado
                        </label>
                    </div>
                </div>
                <div class="btn-group">
                    <button type="submit" class="btn btn-danger px-4" id="deleteButton" disabled>
                        <i class="fas fa-trash me-1"></i>Sí, Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmCheckbox = document.getElementById('confirmDelete');
            const deleteButton = document.getElementById('deleteButton');

            confirmCheckbox.addEventListener('change', function() {
                deleteButton.disabled = !this.checked;
            });

            // Confirmación adicional antes de enviar
            const form = document.querySelector('form');
            form.addEventListener('submit', function(e) {
                if (!confirm('¿ESTÁS ABSOLUTAMENTE SEGURO? Esta acción marcará al empleado como inactivo.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}